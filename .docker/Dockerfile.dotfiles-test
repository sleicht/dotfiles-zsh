# Dockerfile.dotfiles-test
# Ubuntu environment for dotfiles cross-platform testing
#
# This image provides a clean Linux environment for testing shell configurations
# before applying them to live systems. Designed for rapid iteration with
# OrbStack (2-second startup) or Docker.

# Use Ubuntu 24.04 LTS as base
FROM ubuntu:24.04

LABEL maintainer="dotfiles-zsh"
LABEL description="Ubuntu environment for dotfiles cross-platform testing"

# Avoid interactive prompts during package installation
ENV DEBIAN_FRONTEND=noninteractive

# Install essential packages for dotfiles testing
RUN apt-get update && apt-get install -y --no-install-recommends \
    zsh \
    git \
    curl \
    wget \
    sudo \
    locales \
    build-essential \
    ca-certificates \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Generate and configure UTF-8 locale
RUN sed -i '/en_US.UTF-8/s/^# //g' /etc/locale.gen && \
    locale-gen en_US.UTF-8
ENV LANG=en_US.UTF-8
ENV LANGUAGE=en_US:en
ENV LC_ALL=en_US.UTF-8

# Create non-root user 'tester' with sudo access
RUN useradd -m -s /bin/zsh -G sudo tester && \
    echo 'tester ALL=(ALL) NOPASSWD:ALL' >> /etc/sudoers

# Create dotfiles mount point
RUN mkdir -p /home/tester/.dotfiles && \
    chown -R tester:tester /home/tester

# Switch to tester user
USER tester

# Set working directory
WORKDIR /home/tester

# Default command: drop into zsh for interactive testing
CMD ["zsh"]
