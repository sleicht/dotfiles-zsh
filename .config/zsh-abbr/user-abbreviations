# Customize zsh
## .zsh/aliases.zsh
abbr --regular 'b'='bundle'
abbr --regular 'bb'='bat'
abbr --regular 'bb_'='bat --style=plain --paging=never'
abbr --regular 'bbb'='bat --show-all'
abbr --regular 'cpi'='cp -i'
abbr --regular 'cpr'='cp -r'
abbr --regular 'dc'='docker compose'
abbr --regular 'dk'='docker'
abbr --regular 'dkc'='docker compose'
abbr --regular 'dke'='docker exec --interactive --tty'
abbr --regular 'dkps'='docker ps'
abbr --regular 'github-cli'='gh'
abbr --regular 'gla'='gls -a'
abbr --regular 'gll'='gls -l'
abbr --regular 'glla'='gls -la'
abbr --regular 'gllh'='gls -lh'
abbr --regular 'gls'='gls --color=auto --time-style=long-iso'
abbr --regular 'glsd'='gls -l | grep "^d"'
abbr --regular 'kl'='eza --long --color=auto --icons --all --all --sort=name --group-directories-first --binary --group --header --time-style="+%F %T %a" --octal-permissions'
abbr --regular 'kk'='eza --long --color=auto --icons --all --all --sort=type --group-directories-first --binary --group --header --time-style="+%F %T %a" --octal-permissions'
abbr --regular 'kt'='eza --tree'
abbr --regular 'ktree'='eza --tree'
abbr --regular 'lg'='lazygit'
abbr --regular 'ls'='lsd'
abbr --regular 'lt'='lsd --tree'
abbr --regular 'ltree'='lsd --tree'
abbr --regular 'lzd'='lazydocker'
abbr --regular 'lzg'='lazygit'
abbr --regular 'mvi'='mv -i'
abbr --regular 'mx'='mise exec --'
abbr --regular 'neov'='nvim'
abbr --regular 'pn'='pnpm'
abbr --regular 'pss'='procs'
abbr --regular 'rmi'='rm -i'
abbr --regular 'rrf'='rm -rf'
abbr --regular 'rrfi'='rm -rfi'
abbr --regular 'sedd'='sd'
abbr --regular 'treee'='lsd --tree'
abbr --regular 'treeee'='eza --tree'
abbr --regular 'v'='nvim'
abbr --regular 'vv'='nvim'

abbr --regular 'bin'='cd ~/bin'
abbr --regular 'doc'='cd ~/Documents'
abbr --regular 'dotfiles'='cd ~/Repositories/github.com/machupicchubeta/dotfiles'
abbr --regular 'download'='cd ~/Downloads'
abbr --regular 'drop'='cd ~/Dropbox'
abbr --regular 'laptop'='cd ~/Repositories/github.com/machupicchubeta/laptop'
abbr --regular 'remote_repos'='gh repo view --web $(ghq list | fzf | cut -d "/" -f 2,3)'
abbr --regular 'repo'='cd ~/Repositories'
abbr --regular 'repos'='cd $(ghq root)/$(ghq list | fzf)'
abbr --regular 'rp'='cd $(ghq root)/$(ghq list | fzf)'
abbr --regular 'tmp'='cd ~/tmp'
abbr --regular '~'='cd ~'

abbr --regular 'start_postgres'='pg_ctl -D $(brew --prefix)/var/postgresql@16 -l logfile start'

abbr --global 'docker e'='docker exec --interactive --tty'
abbr --global 'docker ps'='docker ps'

abbr --global 'C'='| pbcopy'
abbr --global 'F'='| fzf'
abbr --global 'G'='| grep'
abbr --global 'GV'='| grep -v grep | grep'
abbr --global 'L'='| less'
abbr --global 'P'='| pick'
abbr --global 'X'='| xargs'
