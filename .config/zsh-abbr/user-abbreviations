# Oh My Zsh
## lib/directories
abbr --regular 'l'='lsd -lah'
abbr --regular 'lA'='lsd -lAh'
abbr --regular 'la'='lsd -lah'
abbr --regular 'll'='lsd -lh'
abbr --regular 'md'='mkdir -p'

## plugins/brew
abbr --regular 'bcubc'='brew upgrade --cask && brew cleanup'
abbr --regular 'bcubo'='brew update && brew outdated --cask'
abbr --regular 'brewp'='brew pin'
abbr --regular 'brewsp'='brew list --pinned'
abbr --regular 'bubc'='brew upgrade && brew cleanup'
abbr --regular 'bugbc'='brew upgrade --greedy && brew cleanup'
abbr --regular 'bubo'='brew update && brew outdated'
abbr --regular 'bubu'='brew update && brew outdated && brew upgrade && brew cleanup'
abbr --regular 'bubug'='brew update && brew outdated && brew upgrade --greedy && brew cleanup'
abbr --regular 'bfu'='brew upgrade --formula'
abbr --regular 'buz'='brew uninstall --zap'

abbr --global 'brew cubc'='brew upgrade --cask && brew cleanup'
abbr --global 'brew cubo'='brew update && brew outdated --cask'
abbr --global 'brew rewp'='brew pin'
abbr --global 'brew rewsp'='brew list --pinned'
abbr --global 'brew ubc'='brew upgrade && brew cleanup'
abbr --global 'brew ugbc'='brew upgrade --greedy && brew cleanup'
abbr --global 'brew ubo'='brew update && brew outdated'
abbr --global 'brew ubu'='brew update && brew outdated && brew upgrade && brew cleanup'
abbr --global 'brew ubug'='brew update && brew outdated && brew upgrade --greedy && brew cleanup'
abbr --global 'brew fu'='brew upgrade --formula'
abbr --global 'brew uz'='brew uninstall --zap'

