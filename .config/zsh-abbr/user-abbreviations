## plugins/macos
abbr --regular 'hidefiles'='defaults write com.apple.finder AppleShowAllFiles -bool false && killall Finder'
abbr --regular 'showfiles'='defaults write com.apple.finder AppleShowAllFiles -bool true && killall Finder'

